<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/signup_sample"
    tools:context="inu.io.grabo.LoginActivity">


    <TextView
        android:id="@+id/textView10"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal"
        android:text="회원가입"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/sign_id_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/empty_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idtext"
        android:layout_alignBottom="@+id/idtext"
        android:layout_alignStart="@+id/textView3"
        android:text="I   D"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/idtext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="330dp"
        android:background="@null"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:hint="books@triangle.com"
        android:inputType="textPersonName"
        android:textColorHint="@color/font"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sign_pw_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/empty_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="378dp"
        android:text="PW"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/pwtext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="380dp"
        android:background="@null"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:inputType="textPassword"

        android:textColorHint="@color/font"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sign_re_pw_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="420dp"
        android:background="@drawable/empty_button" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="428dp"
        android:text="RE-PW"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/repwtext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="430dp"
        android:background="@null"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:inputType="textPassword"

        android:textColorHint="@color/font"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/sign_name_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="470dp"
        android:background="@drawable/empty_button" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="478dp"
        android:text="NAME"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/nametext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="480dp"
        android:background="@null"
        android:ems="10"
        android:gravity="right|center_vertical"
        android:hint="홍길동"

        android:inputType="text"
        android:textColorHint="@color/font"
        android:textSize="14sp" />

    <Button
        android:id="@+id/next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/enter" />

</RelativeLayout>